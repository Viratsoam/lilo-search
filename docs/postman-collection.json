{
  "info": {
    "name": "Lilo Search API",
    "description": "API collection for Lilo Search Engine - All endpoints use JSON body format",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["health"]
        },
        "description": "Check API health and feature flags status"
      }
    },
    {
      "name": "Create Index",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/indexing/create",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["indexing", "create"]
        },
        "description": "Create Elasticsearch index with schema from elasticsearch-schema.json"
      }
    },
    {
      "name": "Index Products",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/indexing/index",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["indexing", "index"]
        },
        "description": "Index all products from products.json (~10K products, takes ~30 seconds)"
      }
    },
    {
      "name": "Reindex",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/indexing/reindex",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["indexing", "reindex"]
        },
        "description": "Delete and recreate index, then reindex all products"
      }
    },
    {
      "name": "Get Index Mapping",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/indexing/mapping",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["indexing", "mapping"]
        },
        "description": "Get Elasticsearch index mapping and settings (loaded from elasticsearch-schema.json)"
      }
    },
    {
      "name": "Search - Basic (JSON Body)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"nitrile gloves\",\n  \"size\": 20\n}"
        },
        "url": {
          "raw": "http://localhost:3001/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["search"]
        },
        "description": "Basic search using JSON body format"
      }
    },
    {
      "name": "Search - With Filters (JSON Body)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"pump\",\n  \"filters\": {\n    \"category\": \"Industrial\",\n    \"minRating\": 4.0,\n    \"inventoryStatus\": \"in_stock\"\n  },\n  \"size\": 20\n}"
        },
        "url": {
          "raw": "http://localhost:3001/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["search"]
        },
        "description": "Search with filters using JSON body format"
      }
    },
    {
      "name": "Search - Personalized (JSON Body)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"gloves\",\n  \"userId\": \"user_136\",\n  \"size\": 20\n}"
        },
        "url": {
          "raw": "http://localhost:3001/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["search"]
        },
        "description": "Personalized search with user ID (10-factor personalization)"
      }
    },
    {
      "name": "Search - With Pagination (search_after)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"gloves\",\n  \"size\": 20,\n  \"searchAfter\": [38.35, \"product_id_here\"]\n}"
        },
        "url": {
          "raw": "http://localhost:3001/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["search"]
        },
        "description": "Search with search_after pagination (cursor-based, no 10K limit). Use nextCursor from previous response."
      }
    },
